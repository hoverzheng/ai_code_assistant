{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      // "lib": ["es2015", "dom"],
      "lib": ["es6", "dom"],
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["node_modules/@types"],
      "types": ["vscode"],
      "outDir": "./out",
      "rootDir": "./src"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  